@model FiltroVM 
@using ContratosToyyoda.Data.ViewModels;

<div class="row" style="color: white;">
  <div class="col-md-8 offset-2">
        <h1 style="text-align: center;">Filtros por Pais y Usuario</h1>
    <div class="row">
      <!-- Por país -->
      <div class="col-md-4 col-xs-6 mb-3">
        <div class="card" style="max-width: 300px">
          <div class="card-header bg-info text-white">
            <h5 class="card-title">Por País</h5>
          </div>
          <div class="card-body">
            <form asp-controller="Filtros" asp-action="PorPais" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <label asp-for="opcion" class="control-label"></label>
                <select
                  asp-for="opcion"
                  class="form-control form-select-lg"
                  asp-items="ViewBag.Paises"
                ></select>
                <span asp-validation-for="opcion" class="text-danger"></span>
              </div>
              <div class="form-group">
                <input
                  type="submit"
                  value="Buscar"
                  class="btn btn-outline-success float-right"
                />
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Creado por -->
      <div class="col-md-4 col-xs-6 mb-3">
        <div class="card" style="max-width: 300px">
          <div class="card-header bg-info text-white">
            <h5 class="card-title">Creado Por</h5>
          </div>
          <div class="card-body">
            <form asp-controller="Filtros" asp-action="CreadoPor" method="post">
              <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <div class="form-group">
                <label asp-for="opcion" class="control-label"></label>
                <select
                  asp-for="opcion"
                  class="form-control form-select-lg"
                  asp-items="ViewBag.Usuarios"
                ></select>
                <span asp-validation-for="opcion" class="text-danger"></span>
              </div>
              <div class="form-group">
                <input
                  type="submit"
                  value="Buscar"
                  class="btn btn-outline-success float-right"
                />
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
