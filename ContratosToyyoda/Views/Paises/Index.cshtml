@using System.IO
@model IEnumerable<Pais>

@{
    ViewData["Title"] = "Lista de paises";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table" style="color: white;>
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.pais)</th>
                    <th>@Html.DisplayNameFor(model => model.region)</th>
                    <th>@Html.DisplayNameFor(model => model.direccion)</th>
                    <th>@Html.DisplayNameFor(model => model.apoderado)</th>
                    <th>@Html.DisplayNameFor(model => model.logo)</th>
                        <th>Actions</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.pais)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.region)
                    </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.direccion)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.apoderado.email)
                        </td>
                    <td class="align-middle">
                            <img class="rounded-circle" src="@item.logo" style="max-width: 150px" />
                       
                    </td>
                     <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Editar </a> |
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalles </a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Borrar </a>
                     </td>
                    

                </tr>
                }
            </tbody>

        </table>

    </div>
</div>

<div style="position: fixed; right: 25px; bottom: 75px;"  class="Colum">
    <div tyle=margin-right: 10px class="col-md-12 text-center">
        <button type="button" class="btn btn-primary"><a style=" color: black" asp-controller=Paises asp-action="Create">Agregar nuevo</a></button>
        <button type="button" class="btn btn-secondary"><a style=" color: black" asp-controller=Paises asp-action=Index>Listas Paises</a></button>
        
    </div>
</div>