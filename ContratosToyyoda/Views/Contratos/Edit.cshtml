@model NuevoContratoVM
@using ContratosToyyoda.Data;

@{
    ViewData["Title"] = "Modificar  Contrato";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Modificar contrato</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="nombre" class="control-label"></label>
                                <input asp-for="nombre" class="form-control" />
                                <span asp-validation-for="nombre" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="apellido" class="control-label"></label>
                                <input asp-for="apellido" class="form-control" />
                                <span asp-validation-for="apellido" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="tipoContrato" class="control-label"></label>
                                <select asp-for="tipoContrato" class="form-control" asp-items="Html.GetEnumSelectList<TipoContrato>()"></select>
                                <span asp-validation-for="tipoContrato" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="fechaIngreso" class="control-label"></label>
                                <input asp-for="fechaIngreso" type="date" class="form-control" />
                                <span asp-validation-for="fechaIngreso" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="fechaEmision" class="control-label"></label>
                                <input asp-for="fechaEmision" type="date" class="form-control" />
                                <span asp-validation-for="fechaEmision" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="sueldo" class="control-label"></label>
                                <input asp-for="sueldo" type="number" class="form-control" />
                                <span asp-validation-for="sueldo" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="idUser" class="control-label"></label>
                                 <select asp-for="idUser" class="form-control" asp-items="ViewBag.Usuarios"></select>
                                <span asp-validation-for="idUser" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="idPais" class="control-label"></label>
                                <select asp-for="idPais" class="form-control" asp-items="ViewBag.Paises"></select>
                                <span asp-validation-for="idPais" class="text-danger"></span>
                            </div>

                        </div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="Actualizar" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Regresar a todos</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>
