@model Apoderado

@{
    ViewData["Title"] = "Detalles de contrato";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.nombre @Model.apellido
                            </h5>
                        </p>
                    </div>
                </div>           
                <div class="col-md-8">
                    <div class="card-body">
  
                        <p class="card-text"><b>Nombre: </b>@Model.nombre</p>
                        <p class="card-text"><b>Apellido: </b>@Model.apellido</p>
                        <p class="card-text"><b>Email: </b>@Model.email</p>
                        <p class="card-text"><b>Tipo de contrato: </b>@Model.sexo</p>
                        <p class="card-text"><b>fecha de ingreso: </b>@Model.estadoFamiliar</p>
                        <p class="card-text"><b>Tipo de contrato: </b>@Model.profesion</p>
                        <p class="card-text"><b>Sueldo: </b>@Model.domicilio</p>
                        <p class="card-text"><b>Sueldo: </b>@Model.nacionalidad</p>
                        <p class="card-text"><b>Sueldo: </b>@Model.nacionalidad</p>
                        <p class="card-text"><b>Sueldo: </b>@Model.TipoDoc</p>
                        <p class="card-text"><b>Sueldo: </b>@Model.numDocId</p>
                     </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">Regresar a lista </a>
                      <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Confirmar" class="btn btn-danger float-right" />
                            </form>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>