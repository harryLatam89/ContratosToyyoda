@model IEnumerable<Contrato>

@{
    ViewData["Title"] = "Lista de Contratos";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                   
                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>@Html.DisplayNameFor(model => model.sueldo)</th>
                    <th>@Html.DisplayNameFor(model => model.tipoContrato)</th>
                    <th>@Html.DisplayNameFor(model => model.fechaIngreso)</th>
                    <th>@Html.DisplayNameFor(model => model.fechaEmision)</th>
                    <th>CREADO POR</th>
                    <th>@Html.DisplayNameFor(model => model.pais.pais)</th>
                    <th>Acciones</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.apellido)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.sueldo)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.tipoContrato)
                        </td>
                        <td class="align-middle">
                            @item.fechaIngreso.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                            @item.fechaEmision.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.usuario.nombre)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.pais.pais)
                        </td>

                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Contratos" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Editar </a> |
                            <a class="btn btn-outline-info" asp-controller="Contratos" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detalles </a> |
                            <a class="btn btn-danger text-white" asp-controller="Contratos" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Borrar </a>
                        </td>
                        

                    </tr>
                }
            </tbody>

        </table>



    </div>
</div>

@await Html.PartialAsync("_CreateItem","Contratos")