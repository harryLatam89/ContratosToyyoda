@using System.Security.Claims
@{
    var userName = Context.User.Identity.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ContratosToyyoda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ContratosToyyoda.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/js/site.js" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
     <style>
    /* Estilos personalizados */
        #customNav {
            background-color: #702CF5; /* Morado oscuro */
        }

            #customNav .navbar-nav .nav-link {
                color: #fff; /* Texto blanco */
            }

                #customNav .navbar-nav .nav-link:hover,
                #customNav .navbar-nav .nav-link:focus {
                    color: #fff; /* Texto blanco en estado hover o focus */
                }

                #customNav .navbar-nav .nav-link .bi {
                    color: #fff; /* Iconos blancos */
                }
    </style>
</head>
<body data-bs-theme="ligth" style="background-color: #212529;">
    <header>
        <nav id="customNav" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="https://raw.githubusercontent.com/harryLatam89/img/main/toyyodalogo.jpg" alt="Logo de ContratosToyyoda" style="max-width: 75px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contratos" asp-action="Index"><i class="bi bi-file-earmark"></i> Contratos</a>

                        </li>
                            @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                    <i class="bi bi-gear"></i> Menu
                                </a>                                                    
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-controller="Contratos" asp-action="Index"><i class="bi bi-file-earmark"></i> Contratos</a>
                                    <a class="dropdown-item" asp-controller="Paises" asp-action="Index"><i class="bi bi-map"></i>Paises</a>
                                    <a class="dropdown-item" asp-controller="Usuarios" asp-action="Index"><i class="bi bi-person-square"></i> Usuarios</a>
                                    <a class="dropdown-item" asp-controller="Apoderados" asp-action="Index"> <i class="bi bi-archive-fill"></i>Apoderados</a>
                                </div>
                                
                            </li>
                        }
                        <li class="nav-item">
                      

                            <button class="btn rounded-fill" onclick="window.open('https://github.com/harryLatam89/ContratosToyyoda', '_blank')" style="color: white;"><i class="bi bi-github"></i></button>

                        </li>

                    </ul>
                    <a id="filtro-btn" class="btn btn-primary" asp-controller="Filtros" asp-action="Index">Agregar filtro</a>
            <!--
                        <form class="form-inline my-2 my-lg-0" asp-controller="Contratos" asp-action="Filter" style="padding-right: 25px;">
                                <input name="searchString" type="text" class="form-control" placeholder="Buscar contrato..." aria-label="Recipient's username" aria-describedby="button-addon2">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i>buscar</button>
                            </form>
            -->
          
                    @if (!string.IsNullOrEmpty(userName))
                    {
                        <div class="navbar-nav">
                            <h4 style="color: white;">Bienvenido, <span> @userName  !!!</span>!</h4>
                        </div>

                    }

                    <form asp-controller="Home" asp-action="LogOut">
                        <button style="color: white;" class="btn btn-outline-danger my-2 my-sm-0">
                            <i class="bi bi-box-arrow-in-right"></i>Filanizar Sesion
                        </button>
                    </form>

                       
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - ContratosToyyoda 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
