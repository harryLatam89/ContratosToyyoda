@model Contrato

@{
    ViewData["Title"] = "Lista de Contratos";
}


@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Lo siento!</b> - @TempData["Error"] </span>
    </div>
}
<div class="row" style="color: white;">
    <div class="col-md-8 offset-md-2">
        <h1 style="text-align: center;">Contratos Existentes</h1>
        <table class="table" style="color: white;">
            <thead>
                <tr class="text-center" >
                   
                    <th>@Html.DisplayNameFor(model => model.nombre)</th>
                    <th>@Html.DisplayNameFor(model => model.apellido)</th>
                    <th>@Html.DisplayNameFor(model => model.email)</th>
                    <th>@Html.DisplayNameFor(model => model.inactivo)</th>
                    <th>@Html.DisplayNameFor(model => model.tipoContrato)</th>
                    <th>@Html.DisplayNameFor(model => model.fechaIngreso)</th>
                    <th>@Html.DisplayNameFor(model => model.fechaEmision)</th>
                    <th>CREADO POR</th>
                    <th>@Html.DisplayNameFor(model => model.pais.pais)</th>
                    <th>Acciones</th>
                    
                </tr>
            </thead>
            <tbody>
              
                    <tr>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => @Model.nombre)
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => @Model.apellido)
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => @Model.email)
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => @Model.inactivo)
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem =>@Model.tipoContrato)
                        </td>
                        <td class="align-middle">
                        @Model.fechaIngreso.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                        @Model.fechaEmision.ToString("dd MMM yy")
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => @Model.usuario.nombre)
                        </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => @Model.pais.pais)
                        </td>
     
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-controller="Contratos" asp-action="Edit" asp-route-id="@Model.Id"><i class="bi bi-pencil-square"></i>Editar </a> |
                        <a class="btn btn-outline-info" asp-controller="Contratos" asp-action="Details" asp-route-id="@Model.Id"><i class="bi bi-eye"></i>Detalles </a> |
                        <a class="btn btn-danger text-white" asp-controller="Contratos" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i>Borrar </a>
                        </td>
                        

                    </tr>
                
            </tbody>

        </table>



    </div>
</div>

@await Html.PartialAsync("_CreateItem","Contratos")